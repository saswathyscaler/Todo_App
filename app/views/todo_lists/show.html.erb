<p class="alert alert-success"><%= notice %></p>

<%= render @todo_list, class: "card" %>

<ul class="list-group">
  <% @todo_list.todo_items.each do |todo_item| %>
    <li class="list-group-item">
      <%= todo_item.description %>
    </li>
  <% end %>
</ul>

<div class="mt-3">
  <%= link_to "Edit this todo list", edit_todo_list_path(@todo_list), class: "btn btn-primary mr-2" %> |
  <%= link_to "Back to todo lists", todo_lists_path, class: "btn btn-secondary mr-2" %>

  <%= button_to "Destroy this todo list", @todo_list, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
